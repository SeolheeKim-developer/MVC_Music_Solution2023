@model MVC_Music.Models.Instrument
<form asp-controller="Instruments" asp-action="Create" id="createInstrumentForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <textarea asp-for="Name" class="form-control"></textarea>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="submitInstrumentCreate" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
</form>